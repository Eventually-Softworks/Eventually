<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.evesoftworks.javier_t.eventually.activities.SignInActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/eventually"
        android:id="@+id/image_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_label"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/title_size" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true">

        <EditText
            android:id="@+id/et_name"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_from_title"
            android:layout_width="@dimen/et_width"
            android:layout_height="wrap_content"
            android:hint="@string/mail_telf"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:hintEnabled="true">

        <EditText
            android:id="@+id/et_pass"
            android:layout_gravity="center"
            android:layout_width="@dimen/et_width"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:hint="@string/pass"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/sign_in_button"
        android:layout_width="@dimen/et_width"
        android:layout_marginTop="@dimen/margin_from_button"
        android:text="@string/sign_in"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/textButton"/>

    <com.shobhitpuri.custombuttons.GoogleSignInButton
        android:id="@+id/google_sign_in_button"
        android:layout_width="@dimen/et_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/register_text"
        android:layout_width="@dimen/not_registered_width"
        android:text="@string/not_registered"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:gravity="end"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:focusable="true" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/margin_skip_button"
        android:layout_marginBottom="@dimen/margin_skip_button"
        android:layout_marginTop="@dimen/margin_skip_button"/>-->
</LinearLayout>